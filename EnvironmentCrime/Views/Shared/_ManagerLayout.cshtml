<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <div id="wrapper">
        <header id="logo">
            <h1>Småstad</h1>
            <p>Kommunen där vi bryr oss om varandra</p>
        </header><!-- End header -->


        <nav>
            <ul>
                <li><a class="reports"  asp-controller="Manager" asp-action="StartManager">Start(Ärenden)</a></li>
                <li class="right"><a class="logout"  asp-controller="Home" asp-action="Logout">Logga ut</a></li>
            </ul>
        </nav><!-- End Nav -->

        <div id="content">
            @RenderBody()
            

            <footer>
                &copy; Småstads Kommun All rights reserved.
            </footer>
        </div><!-- End Content -->
    </div><!-- End Wrapper -->
</body>
</html>
